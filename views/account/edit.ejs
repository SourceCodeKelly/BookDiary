<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs',{ pageName : "Settings" }) %>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container-fluid">
        <div>
          <img
            src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ftse2.mm.bing.net%2Fth%3Fid%3DOIP.Z5y5YoDLQk7a6BhgcMdKHAHaJN%26pid%3DApi&f=1"
            class="navLogo">
        </div>
        <a class="navbar-brand" href="/">Book Diary</a>
      </div>
    </nav>

    <main>

      <form method="POST" action="/account/edit?_method=PUT">

        <h1>Edit Account Details</h1>

        <div class="mb-2">
          <label for="name">Name:</label>
          <input class="form-control" type="text" name="name" id="name" value="<%= user.name%>" />
        </div>

        <div class="mb-2">
          <label for="email">Email:</label>
          <input class="form-control" type="text" name="email" id="email" value="<%= user.email%>">
        </div class="mb-2">

        <div class="mb-2">
          <label for="avatar">Avatar (url):</label>
          <input class="form-control" type="text" name="avatar" id="avatar" value="<%= user.avatar%>">
        </div>

        <div>
          <button class="btn-show mt-2" type="submit">Submit</button>
        </div>

      </form>

    </main>

    <%- include('../partials/footer.ejs') %>

  </body>

</html>