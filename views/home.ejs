<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs',{ pageName : "Home" }) %>

    <body>
        <%- include('partials/nav.ejs') %>

            <main>

                <section>
                    <h3><a class="home-library" href='/<%=username%>/currentlyreading'>Books I'm reading</a></h3>

                    <div class="container d-flex justify-content-center">
                        <% for (let i=0; i < currentlyReading.length && i < 8; i++) { %>
                            <div class="cover-container-home">
                                <a href="/<%= username %>/<%= currentlyReading[i]._id %>"><img
                                        src=<%=currentlyReading[i].cover %> alt="<%= currentlyReading[i].title %> "
                                        class="cover-grid-home"></a>
                            </div>
                            <% } %>
                    </div>

                    <form action="/<%=username%>/currentlyreading"><button type="submit"
                            class="btn btn-more">More...</button></form>
                </section>

                <section>
                    <h3><a class="home-library" href='/<%=username%>/wanttoread'>Books I want to read</a></h3>

                    <div class="container d-flex justify-content-center">
                        <% for (let i=0; i < wantToRead.length && i < 8; i++) { %>
                            <div class="cover-container-home">
                                <a href="/<%= username %>/<%= wantToRead[i]._id %>"><img src=<%=wantToRead[i].cover %>
                                    alt="<%= read[i].title %> " class="cover-grid-home"></a>
                            </div>
                            <% } %>
                    </div>

                    <form action="/<%=username%>/wanttoread"><button type="submit" class="btn btn-more">More...</button>
                    </form>
                </section>

                <section>
                    <h3><a class="home-library" href='/<%=username%>/finishedreading'>Books I've read</a></h3>

                    <div class="container d-flex justify-content-center">
                        <% for (let i=0; i < read.length && i < 8; i++) { %>
                            <div class="cover-container-home">
                                <a href="/<%= username %>/<%= read[i]._id %>"><img src=<%=read[i].cover %> alt="<%=
                                        read[i].title %> " class="cover-grid-home"></a>
                            </div>
                            <% } %>
                    </div>
                    <form action="/<%=username%>/finishedreading"><button type="submit"
                            class="btn btn-more">More...</button></form>
                </section>

            </main>

    </body>

</html>