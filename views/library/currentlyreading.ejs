<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs',{ pageName : "Books I'm reading" }) %>
    <%- include('../partials/nav.ejs') %>

        <body class="d-flex flex-column min-vh-100">

            <main>

                <h1 class="books-list-h">Books I'm Reading</h1>

                <section class="mb-5">
                <h2>List view</h2>
                <% for (let i=0; i < books.length; i++) { %>
                    <p class="d-flex justify-content-left"><a class="list-link ps-2 pe-3"
                            href="/<%= books[i]._id %>">
                            <%= `${books[i].author} - '${books[i].title}' ` %>
                        </a></p>
                    <% } %>
                </section>

                <section>
                <h2>Cover view</h2>
                <div class="d-flex flex-wrap justify-content-center ml-3 cover-view-container">
                    <% for (let i=0; i < books.length; i++) { %>
                        <div class="cover-container">
                            <a class="cover-view" href="/<%= books[i]._id %>"><img src=<%=books[i].cover %>
                                alt="
                                <%= books[i].title %> " class="cover-grid">
                            </a>
                        </div>
                        <% } %>
                </div>
                </section>

            </main>
            <%- include('../partials/footer.ejs') %>
        </body>

</html>